@model RetailStore.Models.VendorViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Horizontal Form -->
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Create</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Create">
        <div class="card-body">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 control-label"></label>
                <div class="col-sm-5">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Address" class="col-sm-2 control-label"></label>
                <div class="col-sm-5">
                    <input asp-for="Address" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ContactNo" class="col-sm-2 control-label"></label>
                <div class="col-sm-5">
                    <input asp-for="ContactNo" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="TaxId" class="col-sm-2 control-label"></label>
                <div class="col-sm-5">
                    <input asp-for="TaxId" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
                <button asp-action="Index" class="btn btn-info">Back to List</button>
            </div>
        </div>    
    </form>
</div>

